{
  "name": "type-config",
  "version": "1.0.0",
  "description": "Type safe way defining configurations fed by environment variables, process arguments or json config files (including deserialization and validation)",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "Robin Buschmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RobinBuschmann/type-config/issues"
  },
  "homepage": "https://github.com/RobinBuschmann/type-config#readme",
  "scripts": {
    "build": "tsc",
    "test": "mocha",
    "cover": "nyc mocha",
    "preversion": "npm run build"
  },
  "nyc": {
    "lines": 70,
    "statements": 70,
    "functions": 70,
    "branches": 70,
    "include": [
      "src"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true,
    "cache": true,
    "all": true,
    "check-coverage": true,
    "report-dir": "./coverage"
  },
  "dependencies": {
    "@types/node": "^10.1.0",
    "@types/reflect-metadata": "^0.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/sinon": "^5.0.0",
    "@types/sinon-chai": "^2.7.32",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "reflect-metadata": "^0.1.12",
    "sinon": "^5.0.10",
    "sinon-chai": "^3.1.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
